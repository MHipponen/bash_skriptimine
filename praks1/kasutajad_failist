#!/bin/bash

if [ $# -ne 1 ]; then
    echo "Kasutusjuhend: $0 failinimi"
    exit 1
fi

failinimi=$1

if [ -f "$failinimi" ] && [ -r "$failinimi" ]; then
    for nimi in $(cat "$failinimi"); do
        echo "Lisan kasutajat: $nimi"
        ./lisa_kasutaja "$nimi"
        if [ $? -ne 0 ]; then
            echo "Kasutaja lisamine ebaÃµnnestus: $nimi"
        fi
    done
else
    echo "Probleem failiga $failinimi: Fail ei eksisteeri vÃµi ei ole loetav"
fi
